{
    "name": "save-and-close-all",
    "displayName": "Save and Close All",
    "description": "Save all files and close all editors with a single command",
    "version": "0.0.1",
    "publisher": "masavo",
    "repository": "https://github.com/masavo/save-and-close-all",
    "engines": {
        "vscode": "^1.91.0"
    },
    "activationEvents": [
        "onCommand:extension.saveAndCloseAll"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.saveAndCloseAll",
                "title": "Save and Close All"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
      },
      "devDependencies": {
        "@types/vscode": "^1.91.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3",
        "ts-loader": "^9.5.1",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "@vscode/test-cli": "^0.0.8",
        "@vscode/test-electron": "^2.3.9"
    }
}
